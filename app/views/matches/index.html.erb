<div class="row">
<div class="col-md-10 col-md-offset-1">
    <div class="match-cards">
        <% lasttype = 0
        @matches.each_with_index do |match, index| %>
            <% if lasttype != match.matchtype_id %>

                <div class="row">
                    <div class="col-md-12">
                        <div class="matchtype" id="<%= match.type.to_s.downcase.sub('8e', 'achtste').sub(' ', '') %>"><%= match.type %></div>
                    </div>
                </div>
            <%
            end
            lasttype = match.matchtype_id
            %>
            <%= render 'shared/match', :match => match, :show_group => true %>
            
          <% end %>
        </div>
    </div>
</div>
<% if false %>
<div class="modal fade wedstrijden" id="calendar" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
