<%= form_for([:admin, @venue], :html => {:multipart => true, :class => 'form-horizontal'}) do |f| %>
  <% if @venue.errors.any? %>
  <div class="alert alert-danger">
    <div id="error_explanation">
      <h2><%= pluralize(@venue.errors.count, "error") %> prohibited this venue from being saved:</h2>

      <ul>
      <% @venue.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  </div>
  <% end %>
  <div class="row">
    <div class="col-sm-8">
      <div class="form-group">
        <%= f.label :name, :class => 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :name, :class => 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :city, :class => 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :city, :class => 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :latitude, :class => 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :latitude, :class => 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :longitude, :class => 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :longitude, :class => 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :timezone, :class => 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.time_zone_select :timezone, nil, {}, :class => 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :capacity, :class => 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :capacity, :class => 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :wikipediaUrl, :class => 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :wikipediaUrl, :class => 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :description, :class=> 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_area :description, :class => 'form-control wysihtml', :style => 'height: 400px;' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :picture, :class=> 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.file_field :picture, :class => 'form-control' %>
        </div>
      </div>
      <div class="actions">
        <%= f.submit :class => 'btn btn-primary' %>
      </div>
    </div>
  </div>
  <script type="text/javascript">
    (function() {
        $('.wysihtml').wysihtml5({html: true});
    })();
  </script>
<% end %>
