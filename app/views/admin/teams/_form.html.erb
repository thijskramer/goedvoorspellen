<%= form_for(@team, url: admin_team_path, :html => {:multipart => true, :class => "form-horizontal"}) do |f| %>
  <% if @team.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@team.errors.count, "error") %> prohibited this team from being saved:</h2>

      <ul>
      <% @team.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :country_id, :class => 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.collection_select :country_id, Country.all, :id, :dutchName, {}, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :group_id, :class => 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.collection_select :group_id, Group.all, :id, :name, {}, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :FIFAranking, :class => 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.number_field :FIFAranking, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :associationFull, "Association", :class => 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :associationFull, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :associationAbbreviation, "Abbreviation", :class => 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :associationAbbreviation, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :coach_id, :class => 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.collection_select :coach_id, Coach.all, :id, :fullname, {}, :class => 'form-control' %>
    </div>
  </div>
    <div class="form-group">
      <%= f.label :appearances, :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :appearances, :class => 'form-control' %>
      </div>
    </div>
    <div class="form-group">
    <%= f.label :best_result, :class => 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :best_result, :class => 'form-control' %>
    </div>
    </div>
  <div class="form-group">
    <%= f.label :logo, :class=> 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.file_field :logo, :class => 'form-control' %>
    </div>
  </div>
  <div class="actions form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :class => 'btn btn-primary' %>
    </div>
  </div>
<% end %>
