<%= form_for([:admin, @referee], :html => {:class => 'form-horizontal'}) do |f| %>
  <% if @referee.errors.any? %>
    <div class="alert alert-danger">
      <div id="error_explanation">
        <h2><%= pluralize(@referee.errors.count, "error") %> prohibited this referee from being saved:</h2>

        <ul>
        <% @referee.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :firstName, :class => 'col-md-2' %>
    <div class="col-md-8">
      <%= f.text_field :firstName, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :lastName, :class => 'col-md-2' %>
    <div class="col-md-8">
      <%= f.text_field :lastName, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :dateOfBirth, :class => 'col-md-2' %>
    <div class="col-md-8">
      <%= f.date_select :dateOfBirth, {:order => [:day, :month, :year], :start_year => 1960, :end_year => 2000, :with_css_classes => true}, {:class => "form-control"} %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :country_id, :class => 'col-md-2' %>
    <div class="col-md-8">
      <%= f.collection_select :country_id, Country.all, :id, :dutchName, {}, :class => 'form-control' %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-offset-2 col-md-8">
      <label>
        <%= f.check_box :isActive %>
        Fluit op WK
      </label>
    </div>
  </div>
  <div class="actions">
    <%= f.submit :class => 'btn btn-primary' %>
  </div>
<% end %>
